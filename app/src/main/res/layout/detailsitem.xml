<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#1c2243"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginLeft="28dp"
                    android:background="@drawable/jian"
                    android:id="@+id/details_i3"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/details_i1"
                android:layout_width="match_parent"
                android:layout_height="499dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/details_t1"
                    android:text="wqeqweq"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/details_i2"
                    android:layout_marginLeft="250dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/jian" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/details_t2"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="50dp"
                    android:id="@+id/details_t3"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/details_t4"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="50dp"
                    android:id="@+id/details_t5"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>



            <RadioGroup
                android:id="@+id/x_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:background="#020768"

                >
                <RadioButton
                    android:id="@+id/x_but"
                    android:gravity="center"
                    android:checked="true"
                    android:button="@null"
                    android:text="介绍"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    />
                <RadioButton
                    android:id="@+id/x_but1"
                    android:text="预告"
                    android:gravity="center"
                    android:button="@null"
                    android:layout_width="0dp"
                    android:textColor="#fff"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <RadioButton
                    android:id="@+id/x_but2"
                    android:gravity="center"
                    android:text="剧照"
                    android:layout_width="0dp"
                    android:button="@null"
                    android:textColor="#fff"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <RadioButton
                    android:id="@+id/x_but3"
                    android:gravity="center"
                    android:text="影评"
                    android:button="@null"
                    android:textColor="#fff"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </RadioGroup>

            <android.support.v4.view.ViewPager
                android:id="@+id/x_viewpager"
                android:layout_width="match_parent"
                android:layout_height="700dp">
            </android.support.v4.view.ViewPager>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        >
        <Button
            android:id="@+id/x_pingjia"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="4"
            android:background="#fdf502"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="写影评"
            />
        <Button
            android:id="@+id/x_xuan"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="6"
            android:textColor="#fff"
            android:textSize="20dp"
            android:background="#f10673"
            android:text="选座购票"
            />
    </LinearLayout>
</LinearLayout>